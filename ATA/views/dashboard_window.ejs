<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mapúa MCM - Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <!-- HAMBURGER MENU -->
    <div class="hamburger-menu" id="hamburgerMenu">
        <span></span>
        <span></span>
        <span></span>
    </div>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-logo">
            <img src="/images/mapua_logo.png" alt="Mapúa Logo" class="logo-image">
            <div class="logo-placeholder">MAPÚA</div>
        </div>

        <ul class="nav-menu">
            <li class="nav-item"><a href="/syllabus" class="nav-link"><i class="fas fa-book"></i>Syllabus</a></li>
            <li class="nav-item"><a href="/ata" class="nav-link active"><i class="fas fa-file-alt"></i>ATA</a></li>
            <li class="nav-item"><a href="/tla" class="nav-link"><i class="fas fa-tasks"></i>TLA</a></li>
            <li class="nav-item"><a href="/tws" class="nav-link"><i class="fas fa-calendar-week"></i>TWS</a></li>
        </ul>

        <div class="mode-toggle">
            <i class="fas fa-moon"></i>
            <span>Dark/Light Mode</span>
            <i class="fas fa-toggle-off"></i>
        </div>

        <div class="sign-out">
            <a href="/logout" class="nav-link"><i class="fas fa-sign-out-alt"></i>Sign out</a>
        </div>

        <div class="sidebar-year">2015</div>
    </div>

    <!-- DASHBOARD CONTENT -->
    <main class="dashboard-bg">

        <div class="dashboard-title">DASHBOARD</div>

        <div class="welcome-box">
            <h2>Welcome, [Faculty Name] | [Employment Status] | [College]</h2>
        </div>

        <!-- Action cards - with clickable links -->
        <div class="action-cards">
            <!-- Start New ATA Form Card - NOW CLICKABLE -->
            <a href="/ata/new" class="action-card-link-wrapper">
                <div class="action-card">
                    <div class="action-card-title">Start New ATA Form</div>
                </div>
            </a>

            <!-- Pending Card -->
            <div class="action-card pending-card">
                <div class="action-card-title">Pending (0)</div>
                <div class="action-card-link">View →</div>
            </div>

            <!-- Approved Card -->
            <div class="action-card approved-card">
                <div class="action-card-title">Approved (0)</div>
                <div class="action-card-link">View →</div>
            </div>
        </div>

        <div class="active-term">
            Active Term: [Term Selection]
        </div>

        <div class="info-box">
            <div class="info-row">Last Submission: [None] | Status: [None]</div>
            <div class="info-row">Total Units: 0 | Effective Units: 0</div>
        </div>

        <a href="/" class="back-button">Back</a>
    </main>

    <script src="/js/ata_client.js"></script>
</body>
</html>