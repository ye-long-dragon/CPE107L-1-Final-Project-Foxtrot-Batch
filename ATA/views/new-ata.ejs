            const step4Dot = document.getElementById('step4Dot');
            const step5Dot = document.getElementById('step5Dot');
            const step6Dot = document.getElementById('step6Dot');
            const step7Dot = document.getElementById('step7Dot');
            const stepDots = [step1Dot, step2Dot, step3Dot, step4Dot, step5Dot, step6Dot, step7Dot];

            // Form titles for each step
            const formTitles = [
                'ATA form: Personal Details',
                'ATA form: Teaching Assignments',
                'ATA form: Administrative & Practicum Work',
                'ATA form: External Employment (Part-Time Only)',
                'ATA form: Remedial Module Assignments',
                'ATA form: Review & Submit',
                'ATA form: Admin Approval Section'
