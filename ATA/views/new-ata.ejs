            // Close Approved View (go back to approval)
            if (backFromApprovedToApprovalBtn) {
                backFromApprovedToApprovalBtn.addEventListener('click', function() {
                    approvedViewSection.style.display = 'none';
                    approvalSection.style.display = 'flex';
