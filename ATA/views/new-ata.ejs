                    <div class="form-row units-row">
                        <div class="form-label"></div>
                        <div class="form-field units-field">
                            <input type="text" class="form-input units-input" placeholder="" id="teachingUnits1">
                            <input type="text" class="form-input units-input" placeholder="" id="teachingUnits2">
                        </div>
                    </div>

                </div>
            </div>

            <!-- FORM 2: Teaching Assignments (Step 2) -->
