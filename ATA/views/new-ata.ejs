            function updateFormDisplay() {
                // Hide all forms
                form1.style.display = 'none';
                form2.style.display = 'none';
                form3.style.display = 'none';
                form4.style.display = 'none';
                form5.style.display = 'none';
                form6.style.display = 'none';
                form7.style.display = 'none';

                // Show current form
                document.getElementById(`form${currentStep}`).style.display = 'block';

                // Update title
                formTitle.textContent = formTitles[currentStep - 1];

                // Update progress dots
                stepDots.forEach((dot, index) => {
                    const stepNumber = index + 1;
                    
                    dot.classList.remove('filled', 'active');
                    
                    if (stepNumber < currentStep) {
                        dot.textContent = '●';
                        dot.classList.add('filled');
                    } else if (stepNumber === currentStep) {
                        dot.textContent = '●';
                        dot.classList.add('active');
                    } else {
                        dot.textContent = '○';
                    }
                });

                // Update back button text
                if (currentStep === 1) {
                    backBtn.textContent = 'Return to Dashboard';
                } else {
                    backBtn.textContent = 'Back';
                }

                // Update next button text
                if (currentStep === totalSteps) {
                    nextBtn.textContent = 'Finish';
                } else {
                    nextBtn.textContent = 'Next';
                }

                // Show/hide Step 7 special buttons
                if (step7Buttons) {
                    step7Buttons.style.display = currentStep === 7 ? 'block' : 'none';
                }

                // Scroll to top
                const container = document.querySelector('.form-cards-container');
                if (container) {
                    container.scrollTop = 0;
                }
            }

            // Next button click
            if (nextBtn) {
                nextBtn.addEventListener('click', function() {
                    if (currentStep < totalSteps) {
                        currentStep++;
                        updateFormDisplay();
                    } else {
                        alert('You have completed all forms! You can now proceed to Approval Routing.');
                    }
                });
            }

            // Back button click
            if (backBtn) {
                backBtn.addEventListener('click', function() {
                    if (currentStep === 1) {
                        window.location.href = '/dashboard/window';
                    } else if (currentStep > 1) {
                        currentStep--;
                        updateFormDisplay();
                    }
                });
