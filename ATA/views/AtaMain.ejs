    <!-- MAIN CONTENT -->
    <main class="main-content">

        <!-- HERO BOX -->
        <div class="hero-box">
            <h1>Mapúa Malayan Colleges Mindanao</h1>
            <p>An advanced, web-based portal for Mapúa Malayan Colleges Mindanao students and faculty, providing centralized access to academic records, enrollment, scheduling, and institutional resources for streamlined campus management.</p>
        </div>

        <!-- GET STARTED BOX -->
        <div class="get-started-box">
            <h2>Get Started</h2>
            <div class="dashboard-actions">
                <a href="/dashboard/window" class="dashboard-btn">Dashboard</a>
                <a href="/ata/new" class="dashboard-btn">New ATA</a>
                <a href="/submissions" class="dashboard-btn">Submissions</a>
                <a href="/reports" class="dashboard-btn">Reports</a>
                <a href="/profile" class="dashboard-btn">Profile</a>
            </div>

            <hr style="border-color: #444; margin: 30px 0;">

            <% if (typeof mockUsers !== 'undefined') { %>
            <div style="background-color: rgba(0,0,0,0.3); padding: 20px; border-radius: 8px; border: 1px solid #555;">
                <h3 style="margin-bottom: 15px; color: #ffcc00;"><i class="fas fa-id-badge"></i> Database Login Simulator</h3>
                <select id="loginSelector" class="form-input" style="background-color: #222; color: white; padding: 10px; width: 100%; margin-bottom: 15px; border: 1px solid #555; border-radius: 4px;">
                    <option value="" disabled selected>-- Select a User to Log In As --</option>
                    
                    <% for (const key in mockUsers) { %>
                        <% const user = mockUsers[key]; %>
                        <% const displayRole = user.isPracticumCoordinator ? 'Practicum Coordinator' : user.role; %>
                        
                        <option value="<%= key %>">
                            <%= user.name %> (<%= displayRole %> - <%= user.program %>)
                        </option>
                    <% } %>
                    
                </select>
                <button onclick="simulateLogin()" class="form-btn primary-btn" style="width: 100%; padding: 10px; border-radius: 4px; border: none; background-color: #007bff; color: white; cursor: pointer;">Log In</button>
            </div>
        <% } %>
        ```
        </div>

    </main>
    <script>
        async function simulateLogin() {
            const userId = document.getElementById('loginSelector').value;
            if (!userId) return alert("Please select a user.");

            try {
                const response = await fetch('/auth/simulate-login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ userId })
                });

                const data = await response.json();
                if (data.success) {
                    alert(`✅ Successfully authenticated as ${data.role}!`);
                } else {
                    alert("Login failed.");
                }
            } catch (err) {
                alert("Server error connecting to Auth API.");
            }
        }
    </script>

    <script src="/js/ata_client.js"></script>
</body>
</html>