<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="syllabusPreview.css">
</head>
<body>

<div class="dashboard">

    <aside class="sidebar">
        <div class="sidebar-logo">
            <img src="images/MMCM logo.png" alt="Logo">
        </div>

        <div class="sidebar-divider"></div>

        <nav class="sidebar-menu">
            <a href="syllabus.html">Syllabus</a>
            <a href="#">ATA</a>
            <a href="#">TLA</a>
            <a href="#">TWS</a>
            <button id="themeToggle" class="theme-btn">Dark Mode</button>
        </nav>
    </aside>

    <main class="main-content">

        <header class="top-header">
            <img src="images/MMCM logo.png" alt="College Logo">
            <h2>College of Engineering
                <br> and Architecture</h2>
        </header>

        <section class="content-panel">

            <!-- Course Syllabus Card -->
            <div class="content-card pdf-card">
                <div class="content-label"></div>

                <!-- Toolbar inside the card -->
                <div class="editor-toolbar">
                    <button onclick="document.getElementById('pdfUpload').click()">
                        <img src="images/insertContent.png" alt="Add PDF" />
                        <span>Add PDF</span>
                    </button>

                    <button onclick="clearBox()">
                        <img src="images/trash.webp" alt="Clear" />
                        <span>Clear</span>
                    </button>
                </div>

                <!-- Body area where PDFs will appear -->
                <div id="editorBox" class="content-body scrollable centered">
                    <img src="images/syllabus.png" alt="Syllabus Placeholder" class="placeholder-img">
                    <p class="placeholder-text">Syllabus Shown Here</p>
                </div>

                <!-- Hidden file input -->
                <input type="file" id="pdfUpload" accept="application/pdf" style="display:none" onchange="loadPDF(event)">
            </div>

        </section>

        <div class="back-bottom-wrapper">
            <button class="back-circle" onclick="window.location.href='syllabus.html'">
                &lt;
            </button>
        </div>

        <!-- Submit + Save Draft buttons -->
        <div class="outer-submit-wrapper">
            <button class="outer-submit-btn">Submit</button>
        </div>

    </main>

</div>

<script>
    function loadPDFFile(file) {
        if (file && file.type === "application/pdf") {
            const url = URL.createObjectURL(file);
            const iframe = document.createElement('iframe');
            iframe.src = url;
            iframe.style.width = "100%";
            iframe.style.height = "100%";
            iframe.style.border = "none";

            const editorBox = document.getElementById('editorBox');

            // Hide placeholder
            const placeholderImg = editorBox.querySelector('.placeholder-img');
            const placeholderText = editorBox.querySelector('.placeholder-text');
            if (placeholderImg) placeholderImg.style.display = "none";
            if (placeholderText) placeholderText.style.display = "none";

            // Remove any existing PDF iframe
            const oldIframe = editorBox.querySelector('iframe');
            if (oldIframe) {
                editorBox.removeChild(oldIframe);
            }

            // Append the new PDF iframe
            editorBox.appendChild(iframe);
        }
    }

    function loadPDF(event) {
        const file = event.target.files[0];
        loadPDFFile(file);
    }

    function clearBox() {
        const editorBox = document.getElementById('editorBox');
        const iframe = editorBox.querySelector('iframe');
        if (iframe) {
            editorBox.removeChild(iframe);
        }

        // Show placeholder again
        const placeholderImg = editorBox.querySelector('.placeholder-img');
        const placeholderText = editorBox.querySelector('.placeholder-text');
        if (placeholderImg) placeholderImg.style.display = "block";
        if (placeholderText) placeholderText.style.display = "block";
    }

    // Enable drag-and-drop
    const editorBox = document.getElementById('editorBox');
    editorBox.addEventListener('dragover', function(e) {
        e.preventDefault();
        editorBox.style.border = "2px dashed #666"; // visual feedback
    });

    editorBox.addEventListener('dragleave', function(e) {
        e.preventDefault();
        editorBox.style.border = "none"; // reset feedback
    });

    editorBox.addEventListener('drop', function(e) {
        e.preventDefault();
        editorBox.style.border = "none"; // reset feedback
        const file = e.dataTransfer.files[0];
        loadPDFFile(file);
    });
</script>

</body>
</html>