<body>

    <%- include('../partials/sideMenuBar') %>
    
    <main class="main-content">
        
        
        <div class="dashboard-header">
            <h1>COLLEGE TEACHING-LEARNING ACTIVITY</h1>
            <button class="create-btn" onclick="window.location.href='/tla/form'">+ CREATE TLA FORM</button>
        </div>



        <div class="weekly-rpt-wrapper">

            <% if (weeks && weeks.length > 0) { %>
                <% weeks.forEach(function(week) { %>
                    <%
                        let circleClass = 'not-submitted';
                        if (week.status === 'Approved')      circleClass = 'archived';
                        else if (week.status === 'Archived') circleClass = 'archived';
                        else if (week.status === 'Returned') circleClass = 'returned';
                        else if (week.status === 'Pending')  circleClass = 'pending';
                        else if (week.status === 'Draft')    circleClass = 'draft';
                        const canEdit   = week.status === 'Draft' || week.status === 'Returned' || week.status === 'Not Submitted';
                        const canDelete = week.status !== 'Approved' && week.status !== 'Archived';
                        const weekLabel = 'Week ' + (week.weekNumber || '?');
                    %>
                    <div class="week-buttons" data-tla-id="<%= week._id %>">
                        <!-- Main clickable card -->
                        <button class="week-btn" onclick="openTLA('<%= week._id %>')">
                            <p class="week-label"><%= weekLabel %></p>
                            <p class="status-label">Status: <%= week.status %></p>
                            <div class="circle <%= circleClass %>"></div>
                        </button>

                        <!-- CRUD action row -->
                        <div class="week-actions">
                            <!-- READ / EDIT -->
                            <button class="tla-edit-btn" data-id="<%= week._id %>"
                                    title="<%= canEdit ? 'Edit' : 'View' %>">
                                <% if (canEdit) { %>
                                    &#9998; Edit
                                <% } else { %>
                                    &#128065; View
                                <% } %>
                            </button>

                            <!-- DELETE -->
                            <% if (canDelete) { %>
                            <button class="tla-delete-btn" data-id="<%= week._id %>"
                                    data-label="<%= weekLabel %>"
                                    title="Delete this TLA">
                                &#128465; Delete
                            </button>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-tla-msg">
                    <p>No TLA forms yet. <a href="/tla/form">Create your first one</a>.</p>
                </div>
            <% } %>

        </div>
        
