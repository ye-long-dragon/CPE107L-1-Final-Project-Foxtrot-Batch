<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>TWS - Archived Teaching Workload Sheets</title>
    <link rel="stylesheet" href="/TWS/css/twsStyle.css" />
</head>
<body class="bg">
  <%- include('../partials/sideMenuBar') %>

  <div class="main">
    <div class="shell">
      <div class="page-title">TWS - Archived Teaching Workload Sheets</div>

      <div class="panel">
        <div class="panel-title">Archived Teaching Workload Sheets</div>

        <div class="table">
          <div class="row head">
            <div>Academic Year</div>
            <div>Term</div>
            <div>Date Submitted</div>
            <div class="right">Action</div>
          </div>

          <% if (!list.length) { %>
            <div class="row">
              <div style="grid-column: 1 / -1; opacity:.8;">No archived/submitted TWS yet.</div>
            </div>
          <% } %>

          <% list.forEach((tws) => { %>
            <div class="row">
              <div><%= tws.faculty.acadYear || "2025 - 2026" %></div>
              <div><%= tws.faculty.term || "1st" %></div>
              <div><%= new Date(tws.createdAt).toLocaleDateString() %></div>
              <div class="right">
                <a class="pill" href="/twa/summary/<%= tws.id %>">View</a>
              </div>
            </div>
          <% }) %>
        </div>

        <div class="center">
          <a class="btn btn-big" href="/twa/dashboard">OK</a>
        </div>
      </div>
    </div>
  </div>
</body>
</html>