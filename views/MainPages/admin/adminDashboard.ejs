<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MMCM Chalkboard | Admin Portal</title>
    <link rel="stylesheet" href="/common/css/variables.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--page-bg, #f4f4f4);
            color: #333;
        }

        .page-layout {
            display: grid;
            grid-template-columns: 250px 1fr; 
            min-height: 100vh;
        }

        .side-menu-container {
            background-color: var(--sidebar-bg, #2c3e50);
            height: 100vh;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .main-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            padding-bottom: 50px;
        }

        .admin-hero {
            width: 100%;
            height: 300px;
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), 
                        url('/common/img/background.jpg') no-repeat center center/cover;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--text-on-dark, #fff);
            text-align: center;
        }

        .admin-panel {
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            max-width: 800px;
            width: 90%;
            margin-top: -50px;
            z-index: 10;
        }

        .form-title {
            color: var(--accent-primary);
            margin-bottom: 20px;
            font-size: 1.25rem;
            border-bottom: 2px solid #f4f4f4;
            padding-bottom: 10px;
        }

        .admin-form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .form-group { margin-bottom: 15px; }
        .full-width { grid-column: span 2; }

        label {
            display: block;
            font-weight: 600;
            font-size: 0.85rem;
            margin-bottom: 5px;
            color: #555;
        }

        input, textarea, select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-family: inherit;
            box-sizing: border-box;
        }

        .btn-submit {
            background-color: var(--accent-primary);
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: background 0.3s;
        }

        .btn-submit:hover { background-color: var(--accent-primary-hover, #7d1417); }

        .announcement-box {
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            max-width: 800px;
            width: 90%;
            margin: 30px 0;
        }

        .announcement-item {
            padding: 15px 0;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .announcement-info { flex: 1; }

        .meta-tag {
            font-size: 0.7rem;
            color: #888;
            font-weight: 700;
            text-transform: uppercase;
            display: block;
        }

        .btn-delete {
            background-color: transparent;
            color: #dc3545;
            border: 1px solid #dc3545;
            padding: 5px 12px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.8rem;
            transition: 0.2s;
        }

        .btn-delete:hover {
            background-color: #dc3545;
            color: white;
        }

        .btn-proj-overview {
            margin-top: 15px;
            padding: 10px 20px;
            background: rgba(255,255,255,0.2);
            border: 1px solid #fff;
            color: #fff;
            cursor: pointer;
            border-radius: 50px;
        }
    </style>
</head>
<body>

    <div class="page-layout">
        <aside class="side-menu-container">
            <%- include('../../partials/sideMenuBar') %>
        </aside>

        <main class="main-content">
            <div class="admin-hero">
                <h1>Admin Command Center</h1>
                <p>MMCM Chalkboard Enterprise Resource Planning</p>
                <button class="btn-proj-overview">Project Details</button>
            </div>

            <div class="admin-panel">
                <h3 class="form-title">Create New System Announcement</h3>
                <form id="adminAnnouncementForm">
                    <div class="admin-form-grid">
                        <div class="form-group">
                            <label>Department/Office</label>
                            <input type="text" name="department" placeholder="e.g. Dean's Office" required>
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <select name="category">
                                <option value="Academic">Academic Requirement</option>
                                <option value="Administrative">Administrative Update</option>
                                <option value="Event">Institutional Event</option>
                                <option value="Urgent">Urgent Notice</option>
                            </select>
                        </div>
                        <div class="form-group full-width">
                            <label>Headline</label>
                            <input type="text" name="headline" placeholder="Main title of the announcement" required>
                        </div>
                        <div class="form-group full-width">
                            <label>Message Detail</label>
                            <textarea name="content" rows="3" placeholder="Detailed information for faculty members..." required></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn-submit">Post Announcement</button>
                </form>
            </div>

            <div class="announcement-box">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                    <h2 style="margin: 0; color: var(--color-mapua-blue, #002455);">Live Announcements</h2>
                    <span style="font-size: 0.8rem; color: #666;">Showing: All Departments</span>
                </div>
                
                <% if (typeof announcements !== 'undefined' && announcements.length > 0) { %>
                    <% announcements.forEach(item => { %>
                        <div class="announcement-item" data-id="<%= item._id %>">
                            <div class="announcement-info">
                                <span class="meta-tag"><%= item.department %> • <%= item.category %></span>
                                <p><strong><%= item.headline %>:</strong> <%= item.content %></p>
                            </div>
                            <button class="btn-delete" title="Remove post">Delete</button>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="announcement-item">
                        <div class="announcement-info">
                            <span class="meta-tag">System • Preview Mode</span>
                            <p><strong>Notice:</strong> No real announcements found in database. Showing placeholders.</p>
                        </div>
                        <button class="btn-delete">Delete</button>
                    </div>
                <% } %>
            </div>
        </main>
    </div>

    <div id="projectModal" class="modal-overlay">
        </div>

    <script src="/MainPages/js/adminDashboard.js"></script>
</body>
</html>