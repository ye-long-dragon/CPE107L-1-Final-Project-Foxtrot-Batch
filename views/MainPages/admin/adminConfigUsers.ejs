        <main class="main-content">
            <div class="admin-hero">
                <h1>User Configuration</h1>
                <p>Enterprise Resource Planning â€¢ Faculty & Staff Management</p>
            </div>

            <div class="admin-panel">
                <h3 class="form-title">Register New Faculty/Staff</h3>
                <form id="userConfigForm" action="/admin/users/add" method="POST">
                    <div class="admin-form-grid">
                        <div class="form-group admin-input-style">
                            <label>First Name</label>
                            <input type="text" name="firstName" required>
                        </div>
                        <div class="form-group admin-input-style">
                            <label>Middle Name</label>
                            <input type="text" name="middleName">
                        </div>
                        <div class="form-group admin-input-style">
                            <label>Last Name</label>
                            <input type="text" name="lastName" required>
                        </div>

                        <div class="form-group admin-input-style">
                            <label>Email Address</label>
                            <input type="email" name="email" required>
                        </div>
                        <div class="form-group admin-input-style">
                            <label>Employee ID</label>
                            <input type="text" name="employeeId" required>
                        </div>
                        <div class="form-group admin-input-style">
                            <label>Password</label>
                            <input type="password" name="password" required>
                        </div>

                        <div class="form-group admin-input-style">
                            <label>Role</label>
                            <select name="role">
                                <option value="Professor">Professor</option>
                                <option value="Program-Chair">Program-Chair</option>
                                <option value="Dean">Dean</option>
                                <option value="HR">HR</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                        <div class="form-group admin-input-style">
                            <label>Employment Type</label>
                            <select name="employmentType">
                                <option value="Full-Time">Full-Time</option>
                                <option value="Part-Time">Part-Time</option>
                            </select>
                        </div>
                        <div class="form-group admin-input-style">
                            <label>Program</label>
                            <select name="program">
                                <option value="CpE">Computer Engineering</option>
                                <option value="ECE">Electronics Engineering</option>
                                <option value="EE">Electrical Engineering</option>
                                <option value="IE">Industrial Engineering</option>
                                <option value="CE">Civil Engineering</option>
                                <option value="ChE">Chemical Engineering</option>
                                <option value="ME">Mechanical Engineering</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn-submit">Initialize Account</button>
                </form>
            </div>

            <div class="user-list-box">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                    <h2 style="margin: 0; color: #002455; font-size: 1.2rem;">Active Accounts</h2>
                    <input type="text" placeholder="Filter by Name or ID..." style="padding: 8px; border-radius: 5px; border: 1px solid #ddd;">
                </div>
                
                <table>
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Role/Dept</th>
                            <th>Employee ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users && users.length > 0) { %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td>
                                        <strong><%= user.lastName %>, <%= user.firstName %></strong><br>
                                        <small><%= user.email %></small>
                                    </td>
                                    <td>
                                        <span class="role-badge"><%= user.role %></span><br>
