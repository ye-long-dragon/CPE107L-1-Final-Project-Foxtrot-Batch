            background-color: var(--accent-primary, #a01a1e);
            color: white;
            padding: 14px 35px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 700;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .btn-submit:hover {
            background-color: var(--accent-primary-hover, #7d1417);
            transform: translateY(-1px);
            box-shadow: 0 5px 15px rgba(160, 26, 30, 0.3);
        }

        /* User List Specific Styles */
        .user-list-box {
