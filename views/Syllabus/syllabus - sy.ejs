<script>
    function downloadPDF() {
        const iframe = document.querySelector('#editorBox iframe');
        if (iframe) {
            const link = document.createElement('a');
            link.href = iframe.src;
            link.download = "syllabus.pdf"; // default filename
            link.click();
        } else {
            alert("No PDF loaded to save.");
        }
    }
